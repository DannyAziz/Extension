  {
    "name": "Hive",
    "version": "0.1",
    "description": "https://hive.one",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["https://twitter.com/*"],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Hive"
    },
    "content_security_policy": "script-src 'self' https://www.google-analytics.com 'unsafe-eval'; object-src 'self'"
  }